<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarQuoteDetails">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="215dp"
                android:layout_height="51dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/group_10435" />

            <ImageButton
                android:id="@+id/gsign_in_button"
                android:layout_width="51dp"
                android:layout_height="35dp"
                android:layout_marginStart="120dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="690dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:srcCompat="@drawable/group_10434" />


            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="407dp"
                android:layout_height="329dp"
                android:layout_marginTop="40dp"
                android:adjustViewBounds="false"
                android:background="#3F51B5"
                android:cropToPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/rectangle_13" />

            <EditText
                android:id="@+id/bday_date"
                android:layout_width="255dp"
                android:layout_height="55dp"
                android:layout_marginTop="16dp"
                android:editable="true"
                android:hint="Birthday (dd/mm/yyyy)"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />


            <EditText
                android:id="@+id/const_year"
                android:layout_width="255dp"
                android:layout_height="63dp"
                android:layout_marginBottom="52dp"
                android:editable="true"
                android:hint="Your zip code"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName4"
                app:layout_constraintStart_toStartOf="@+id/bday_date" />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="96dp"
                android:layout_marginEnd="41dp"
                android:text="Welcome. Apply in minutes"
                android:textAlignment="center"
                android:textColor="@color/blue_50"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="72dp"
                android:layout_marginEnd="41dp"
                android:text="Get insured"
                android:textAlignment="center"
                android:textColor="@color/blue_50"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/editTextTextPersonName"
                android:layout_width="133dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Personal details"
                android:textAlignment="center"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView12"
                app:layout_constraintTop_toTopOf="@+id/imageView13"
                app:layout_constraintVertical_bias="0.163" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="196dp"
                android:layout_height="26dp"
                android:layout_marginStart="70dp"
                android:layout_marginBottom="216dp"
                android:text="Get an instant quote"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView13"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/imageView13"
                app:layout_constraintTop_toBottomOf="@+id/textView36"
                app:layout_constraintVertical_bias="0.789" />

            <ImageView
                android:id="@+id/imageView30"
                android:layout_width="407dp"
                android:layout_height="329dp"
                android:layout_marginTop="4dp"
                android:background="#3F51B5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/imageView13"
                app:layout_constraintTop_toBottomOf="@+id/imageView13"
                app:srcCompat="@drawable/rectangle_13" />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="255dp"
                android:layout_height="55dp"
                app:layout_constraintBottom_toTopOf="@+id/idv"
                app:layout_constraintEnd_toEndOf="@+id/imageView30"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView22"
                app:layout_constraintTop_toBottomOf="@+id/spinner2"
                app:layout_constraintVertical_bias="1.0" />

            <ImageButton
                android:id="@+id/simpleImageButtonCalendar"
                android:layout_width="48dp"
                android:layout_height="58dp"
                android:layout_marginBottom="12dp"
                android:adjustViewBounds="true"
                android:background="#FFF"
                android:onClick="setDate"
                android:padding="20dp"
                android:src="@drawable/calendar_foreground"
                app:layout_constraintBottom_toBottomOf="@+id/bday_date"
                app:layout_constraintEnd_toEndOf="@+id/imageView13"
                app:layout_constraintHorizontal_bias="0.692"
                app:layout_constraintStart_toStartOf="@+id/bday_date"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

            <TextView
                android:id="@+id/editTextTextPersonName4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Car information"
                android:textAlignment="center"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView30" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="269dp"
                android:text="Make"
                app:layout_constraintBottom_toBottomOf="@+id/imageView30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/imageView30" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="120dp"
                android:layout_marginBottom="186dp"
                android:text="Model"
                app:layout_constraintBottom_toBottomOf="@+id/imageView30"
                app:layout_constraintEnd_toEndOf="@+id/imageView30"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/imageView30"
                app:layout_constraintTop_toTopOf="@+id/imageView30" />

            <EditText
                android:id="@+id/idv"
                android:layout_width="255dp"
                android:layout_height="55dp"
                android:layout_marginBottom="8dp"
                android:editable="true"
                android:hint="Car year"
                android:inputType="number"
                android:textColor="#0A3379"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/get_quote"
                app:layout_constraintEnd_toEndOf="@+id/imageView30"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/spinner3" />

            <Button
                android:id="@+id/get_quote"
                android:layout_width="233dp"
                android:layout_height="54dp"


                android:layout_marginBottom="28dp"
                android:onClick="getCarQuote"
                android:text="Get a quote"
                android:textColor="@color/white"
                android:theme="@style/PrimaryButton"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.449"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinner2"
                app:layout_constraintVertical_bias="0.964" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="255dp"
                android:layout_height="55dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toTopOf="@+id/textView22"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView20"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName4"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>